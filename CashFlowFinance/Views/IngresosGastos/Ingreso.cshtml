@model CashFlowFinance.ViewModels.IngresosGastos.IngresosViewModel
@{
    ViewBag.Title = "Ingreso";
    int numero = 1;
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="wraper container">
            <div class="col-lg-12 col-md-15">
                <div class="card-box">
                    <h4 class="text-success m-b-5 header-title"><b>Registre Ingreso</b></h4>
                    <br />
                    <form class="form-horizontal" role="form" data-parsley-validate="" novalidate="" method="post">

                        @Html.HiddenFor(x => x.IngresoId)
                        <div class="form-group ">
                            <label for="inputEmail3" class="col-sm-4 control-label">Nombre del Ingreso</label>
                            <div class="col-sm-7">
                                <!--INPUT-->
                                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @type = "text" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="inputEmail3" class="col-sm-4 control-label">Costo</label>
                            <div class="col-sm-7">
                                <!--INPUT-->
                                @Html.TextBoxFor(x => x.Costo, new { @class = "form-control", @type = "text" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Guardar
                                </button>
                                <button href="" type="reset" class="btn btn-default waves-effect waves-light m-l-5">
                                    Cancelar
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="col-lg-12 col-md-15">
                <div class="card-box">
                    <h4 class="text-primary m-b-5 header-title"><b>Historial de ingresos</b></h4>
                    <br />
                    <form class="form-horizontal" role="form" data-parsley-validate="" novalidate="">

                        <div class="p-20">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Nombre</th>
                                        <th>Costo</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ingreso in Model.LstIngreso)
                                    {
                                        <tr class="success">
                                            @if (ingreso.FamiliaId == Convert.ToInt32(Session["FAMILIAID"]) &&
                                                ingreso.PersonaId == Convert.ToInt32(Session["PERSONAID"]))
                                            {
                                                <th scope="row">@(numero++)</th>
                                                    <td>@ingreso.Nombre</td>
                                                    <td>S/. @ingreso.Costo</td>
                                                    <td>@ingreso.Fecha</td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

