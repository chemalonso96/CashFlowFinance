@model CashFlowFinance.ViewModels.Personas.AddEditPersonaViewModel

@{
    ViewBag.Title = "AddEditPersona";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="wraper container">
            <div class="row">
                <div class="col-md-3 col-lg-12">
                    <div class="col-lg-6">
                        <h5><b>Registrar Miembro</b></h5>

                        <form class="form-horizontal group-border-dashed" method="post">
                            @Html.HiddenFor(x=>x.PersonaId)
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Nombre</label>
                                <div class="col-sm-6">
                                   @Html.TextBoxFor(x => x.Nombre, new { @type = "text", @class = "form-control", @placeholder = "Nombre" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Apellido</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(x => x.Apellido, new { @type = "text", @class = "form-control", @placeholder = "Apellido" })
                                </div>
                            </div>
                            <!--List-->
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Miembro</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(x => x.MiembroId, new SelectList(Model.LstMiembro, "MiembroId", "Nombre" ), "[-SELECCIONE-]", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">Sueldo Bruto</label>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(x => x.SueldoBruto, new { @type = "text", @class = "form-control", @placeholder = "Sueldo Bruto" }) 
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">AFP</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(x => x.AFPId, new  SelectList(Model.LstAFP, "AFPId", "Nombre"), "[-SELECCIONE-]", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Impuesto</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(x => x.ImpuestoId, new SelectList(Model.LstImpuesto, "ImpuestoId", "Nombre"), "[-SELECCIONE-]", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class = "col-sm-3 control-label">Ocupacion</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(x => x.OcupacionId, new SelectList(Model.LstOcupacion, "OcupacionId", "Nombre"), "[-SELECCIONE-]", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group m-b-0">
                                <div class="col-sm-offset-3 col-sm-9 m-t-15">
                                    <button type="submit" class="btn btn-primary">
                                        Guardar
                                    </button>
                                    <button type="reset" class="btn btn-default m-l-5">
                                        Cancelar
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


