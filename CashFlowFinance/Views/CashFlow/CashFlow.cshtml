@model CashFlowFinance.ViewModels.CashFlow.CashFlowViewModel
@{
    ViewBag.Title = "CashFlow";
}

<h2>CashFlow</h2>

<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="wraper container">
            <div class="col-lg-12 col-md-15">
                <div class="card-box">
                    <h4 class="text-success m-b-5 header-title"><b>Flujo de caja proyectado anual</b></h4>
                    <br />
                    <form class="form-horizontal" role="form" data-parsley-validate="" novalidate="" method="post">

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Banco</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(x => x.BancoId, new SelectList(Model.LstBanco, "BancoId", "Nombre"), "[-SELECCIONE-]", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Periodo</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(x => x.PeriodoId, new SelectList(Model.LstPeriodo, "PeriodoId", "Nombre"), "[-SELECCIONE-]", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Visualizar
                                </button>
                                <button href="@Url.Action("Home","Home", new { FamiliaId = Convert.ToInt32(Session["FAMILIAID"])})" class="btn btn-primary waves-effect waves-light">
                                    Salir
                                </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>